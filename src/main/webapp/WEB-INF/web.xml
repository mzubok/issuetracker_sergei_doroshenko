<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Issue Tracker</display-name>
  <description>JEE training project implementation by Sergei Doroshenko</description>
  <servlet>
    <servlet-name>SampleServlet.do</servlet-name>
    <servlet-class>org.training.issuetracker.controllers.SampleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Main.do</servlet-name>
    <servlet-class>org.training.issuetracker.controllers.Main</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Main.do</servlet-name>
    <url-pattern>/Main.do</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>/index.html</welcome-file>
  </welcome-file-list>
  
  <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.html</location>
    </error-page>
</web-app>